# Application
NODE_ENV=production
PORT=5000

# Database (PostgreSQL)
DATABASE_URL=postgresql://m_user:password@localhost:5432/m_platform

# Redis (for sessions & WebSocket state)
REDIS_URL=redis://localhost:6379

# Session Management
SESSION_SECRET=your_session_secret_key_min_32_chars

# OpenAI API
OPENAI_API_KEY=sk-...

# Replit OIDC Authentication (or replace with AWS Cognito)
REPLIT_OIDC_ISSUER=https://auth.replit.com
REPLIT_OIDC_CLIENT_ID=your_client_id
REPLIT_OIDC_CLIENT_SECRET=your_client_secret

# AWS Cognito (alternative to Replit OIDC)
# AWS_COGNITO_DOMAIN=your_domain.auth.region.amazoncognito.com
# AWS_COGNITO_CLIENT_ID=your_client_id
# AWS_COGNITO_CLIENT_SECRET=your_client_secret
# AWS_REGION=us-east-1

# AWS Services (for production)
# AWS_ACCESS_KEY_ID=your_access_key
# AWS_SECRET_ACCESS_KEY=your_secret_key
# AWS_S3_BUCKET=m-platform-assets
# AWS_REGION=us-east-1

# Application URLs
APP_URL=https://m-platform.com
API_URL=https://api.m-platform.com

# Logging
LOG_LEVEL=info
